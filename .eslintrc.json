{
  "env": {
    "es2020": true,
    "node": true,
    "jest": true
  },
  "globals": {
    "node": true
  },
  "extends": [
    "airbnb-base",
    "plugin:import/recommended",
    "plugin:jest/all"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "eslint-plugin-import",
    "eslint-plugin-jest"
  ],
  "rules": {
    "no-undef": "error",
    "max-len": ["error", { "code": 120 }],
    "import/extensions": ["error", "always", { "js": "never", "ts": "never" }],
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "config/**/*.ts",
          "script/**/*.ts",
          "rollup.*.ts",
          "jest.*.ts"
        ]
      }
    ],
    "jest/no-hooks": "off",
    "jest/prefer-expect-assertions": [
      "warn",
      {
        "onlyFunctionsWithAsyncKeyword": true
      }
    ]
  },
  "overrides": [{
    "files": ["*.ts"],
    "rules": {
      "no-undef": "off"
    }
  }],
  "settings": {
    "import/parsers": {
      "@typescript-eslint/parser": [".ts"]
    },
    "import/resolver": {
      "node": { "extensions": [".js"] },
      "typescript": { "extensions": [".ts"] }
    }
  }
}
